<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--Bootstrap CDN-->
  <!-- BOOTSTRAP cdn -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/nav-footer.css">
  <link rel="stylesheet" href="../css/register-login.css">
  <link rel="icon" href="/images/prevento-logo.png">
  <title>Perfil de usuario</title>
</head>

<body>
  <%- include('../partials/header') %>
    <div class="contenedor-p">
      <!--FORM-->
      <div class="container card contenedor shadow">
        <div>
          <h1 class="titulo-login-register">Datos de tu cuenta </h1>
          <hr>
          <div class="divform">
            <h5 class="titulo-login-register">Nombre</h5>
            <div class="formu">
              <form action="/user/editar/<%= session.id%>?_method=PUT" method="POST"
                enctype="multipart/form-data" class="form-control">
                <div class="row mb-3">
                  <input name="nombre" type="text" class="form-control formuinput" value="<%= session.nombre %> ">
                  <div> 
                    <h3 class="form-control formuinput"> </h3>
                  </div>
                </div>

                <h5 class="titulo-login-register">Apellido</h5>
                <div class="row mb-3">
                  <div>
                    <input name="apellido" type="text" class="form-control formuinput" value="<%= session.apellido %> ">
                    <h3 class="form-control formuinput"></h3>
                  </div>
                </div>
                <h5 class="titulo-login-register">Email de tu cuenta</h5>

                <div class="row mb-3">
                  <div>
                    <input name="email" type="email" class="form-control formuinput" value="<%= session.email %> ">
                    <h3 class="form-control formuinput"></h3>
                  </div>
                </div>
                <h5 class="titulo-login-register">Cambiar contraseña</h5>
                <div class="row mb-3">
                  <div class="row">
                    <label class="col-12 col-sm-6 text-dark text-center" >Nueva contraseña
                      <input type="password" class="form-control formuinput">
                    </label>
                    <label class="col-12 col-sm-6 text-dark text-center" >Confirmar contraseña
                      <input name="password" type="password" class="form-control formuinput">
                    </label>
                    <h3 class="form-control formuinput"></h3>
                  </div>
                </div>
                <h5 class="titulo-login-register">Direccion</h5>
                <div class="row mb-3">
                  <div>
                    <input name="direccion" type="text" class="form-control formuinput"">
                  </div>
                </div>
                <button id="carrito" type="submit" class="btn btn-warning p-1 px-3 mt-5"
                style="font-size: 0.9rem;margin:auto;display:block">Editar usuario</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    </div>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
</body>

</html>