<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- viewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- BOOTSTRAP cdn -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/register-login.css">
    <link rel="stylesheet" href="../css/nav-footer.css">
    <link rel="icon" href="/images/prevento-logo.png">
  <title>Ingresar</title>
</head>
<body>
  <%- include('../partials/header') %>

    <div class="container card contenedor">
      <div class="row">
          <div class="col-4 img-log card">
          </div>
          <div class="col-8"><div class="divform">
              <h3 class="titulo-login-register">Iniciar Sesión</h1> <hr>
                <div class="formu">
              <!-- FORMULARIO -->
              <!-- redirigimos a la ruta login para que entre al validador, con metodo POST -->
              <form action="/login" method="POST">
                <div class="row mb-3">
                  <div>
                    <!-- a cada imput le pones un name -->
                    <input type="email" name="emailLogin" class="form-control formuinput" placeholder="Email" id="inputPassword">
                    <% if (locals && locals.errors) { %>
                      <% if (locals.errors[0].param=="emailLogin") { %>
                        <h4 style="color:red"> <%= locals.errors[0].msg %>  </h4> 
                      <% } %>
                    <% } %>
                  </div>
                </div>

                  <div class="row mb-3">
                      <div>
                        <!-- a cada imput le pones un name -->
                        <input type="password" name="passwordLogin" class="form-control formuinput" placeholder="Contraseña" id="inputPassword">
                        <% if (locals && locals.errors) { %>
                          <% if (locals.errors[0].param=="passwordLogin") { %>
                            <h4 style="color:red"> <%= locals.errors[0].msg %>  </h4> 
                          <% } %>
                        <% } %>
                      </div>
                    </div>
                 
                </div>
                  <button type="submit" class="btn btn-formu">Enviar</button>    
              </form>
          </div></div>
      </div>
  </div>
<!-- FOOTER -->
<%- include('../partials/footer') %>
        <!-- BOOTSTRAP javascript -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
          integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
          crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
          integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
          crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
          integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
          crossorigin="anonymous"></script>
</body>

</html>